html,body,div,span,iframe,h1,h2,h3,h4,h5,h6,p,img,i,ul,li,form,label,footer,header,nav,section,a {
    margin: 0;
    padding: 0;
    border: 0;
    outline: 0;
    -webkit-user-select: none;
    font-family: Helvetica, Arial, sans-serif;
    -webkit-text-size-adjust: 100%;
}
html {
    font-size: 125%;
    /*1rem == 20px*/
}
html,body {
    overflow-x: hidden;
}
body {
    -webkit-overflow-scrolling: touch;
}